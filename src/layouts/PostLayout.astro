---
import MainLayout from "./MainLayout.astro";
import FormattedDate from "../components/FormattedDate.astro";
const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<MainLayout title={title} description={description}>
  <section class="max-w-7xl mx-auto my-8">
    {
      heroImage && (
        <div class="border border-zinc-800">
          <img src={heroImage} alt={title} />
        </div>
      )
    }
    <div>
      <div class="border-b border-zinc-800">
        <h1 class="text-center text-3xl font-light" transition:name={title}>
          {title}
        </h1>
        <div class="font-light text-sm text-center">
          <FormattedDate date={pubDate} />
          {
            updatedDate && (
              <>
                <span>&roarr;</span>
                <div class=" text-zinc-500 inline-block">
                  <FormattedDate date={updatedDate} />
                </div>
              </>
            )
          }
        </div>
      </div>
      <article class="prose prose-invert prose-p:text-xl prose-a:text-blue-600 prose-strong:font-medium prose-p:text-justify prose-img:rounded-xl prose-headings:underline prose-headings:font-light mx-auto max-w-full">
        <slot />
      </article>
    </div>
  </section>
</MainLayout>
